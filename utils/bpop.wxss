/*
  慎重修改全局样式，如需修改，请到对面页面进行覆盖
*/
page {
  height: 100%;
}
view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}
.theme-color { /* 主题颜色 */
  color: #FF8615 !important;
}
.theme-bg {  /* 主题背景颜色 */
  background-color: #FF8615;
  color: #fff;
}
.content-bg { /* 内容背景色 */
  background: #f3f3f3;
}
.green {  /* 涨 */
  color: #0BC1A2;
}
.red {   /* 跌 */
  color: #FF4233;
}
.white {
  color: #fff;
}
.rate {  /* 比率字体 */
  font-family:DINAlternate-Bold,DINAlternate;
}
.letter-spacing {  /* 字体间距 */
  letter-spacing: 2rpx;
}
.button {  /* 按钮样式 */
  background: #FF8615 !important;
  color: #fff !important;
}
.text-muted { /* 灰色字体 */
  color: #999;
}
.font-small { /* 小号字体 */
  font-size: 24rpx;
}
.font-big {  /* 大号字体 */
  font-size: 32rpx;
}
.placeholderClass { /* 输入框字体样式 */
  color: #999;
  font-size: 30rpx;
}
.hoverClass {
  opacity: 0.7;
}
.font-bold {
  font-weight: bold;
}
.text-center {
  text-align: center;
}
/* flex */
.d-flex {
  display: flex;
}
.flex-column {
  flex-direction: column;
}
.justify-content-between {
  justify-content: space-between;
}
.justify-content-around {
  justify-content: space-around;
}
.justify-content-evenly {
  justify-content: space-evenly;
}
.justify-content-center {
  justify-content: center;
}
.justify-content-end {
  justify-content: flex-end;
}
.align-items-center {
  align-items: center;
}
.flex-1 {
  flex: 1;
}
.flex-shrink-0 {
  flex-shrink: 0;
}
/* 圆角 */
.rounded-circle {
  border-radius: 50%;
}
.w-100 {
  width: 100%;
}
.w-50 {
  width: 50%;
}
.h-100 {
  height: 100%;
}
/* 蒙版 */
.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,.3);
}
/* 超出一行省略号显示 */
.ellipsis {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
/* 强制换行 */
.break-word {
  word-wrap: break-word;
  white-space: pre-wrap;
}
/* 固定在底部的按钮padding-bottom */
.fixed-bottom {
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}
.relative {
  position: relative;
}
.absolute {
  top: 0;
  left: 0;
  right: 0;
}
/* gif动画 */
.loading-img {
  top: 140rpx;
  width: 200px;
}