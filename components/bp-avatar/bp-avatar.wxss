.avatar-wrap {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}
.avatar-wrap .avatar {
  width: 100%;
  height: 100%;
}
.avatar-wrap .vip {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 40%;
  height: auto;
}
.avatar-wrap .jigou {
  position: absolute;
  bottom: -12.5%;
  left: 50%;
  width: 85%;
  height: auto;
  transform: translate(-50%, 0);
}